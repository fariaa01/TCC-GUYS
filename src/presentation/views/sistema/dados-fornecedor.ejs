<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fornecedores</title>
  <link rel="stylesheet" href="/fornecedor/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" />
</head>
<body>
  <div class="container">
    <h2>Gestão de Fornecedores</h2>
    
    <div class="search-add-bar">
      <div class="search-bar">
        <i class="fas fa-search search-icon"></i>
        <input type="text" id="searchInput" placeholder="Buscar fornecedores...">
      </div>
      <button id="btnAdicionarFornecedor" class="btn-add">
        <i class="fas fa-plus"></i>
        Adicionar Fornecedor
      </button>
    </div>
  </div>

  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>CNPJ</th>
        <th>Telefone</th>
        <th>Telefone Alternativo</th>
        <th>Pessoa Responsável</th>
        <th>Categoria</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% fornecedores.forEach(fornecedor => { %>
        <tr>
          <td data-label="Nome"><%= fornecedor.nome %></td>
          <td data-label="Email"><%= fornecedor.email %></td>
          <td data-label="CNPJ"><%= fornecedor.cnpj %></td>
          <td data-label="Telefone"><%= fornecedor.telefone %></td>
          <td data-label="Telefone Alternativo">
            <% if (fornecedor.telefone_alternativo && fornecedor.telefone_alternativo.trim() !== '') { %>
              <%= fornecedor.telefone_alternativo %>
            <% } else { %>
              Sem telefone alternativo
            <% } %>
          </td>
          <td data-label="Pessoa Responsável">
            <% if (fornecedor.pessoa_responsavel && fornecedor.pessoa_responsavel.trim() !== '') { %>
              <%= fornecedor.pessoa_responsavel %>
            <% } else { %>
              Nenhum responsável
            <% } %>
          </td>
          <td data-label="Categoria"><%= fornecedor.categoria %></td>
          <td data-label="Ações">
            <a href="/fornecedores/<%= fornecedor.id %>" class="btn-editar" title="Ver detalhes">
              <i class="fa-solid fa-eye"></i>
            </a>
            <button class="btn-excluir" data-id="<%= fornecedor.id %>" title="Excluir fornecedor">
              <i class="fas fa-trash-alt"></i>
            </button>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <div id="modalFornecedor" class="modal">
    <div class="modal-content">
      <span class="close" id="fecharModalFornecedor">&times;</span>
      <h2>Adicionar Fornecedor</h2>
      <form id="formFornecedor" method="POST" action="/fornecedores/create">
        <label for="nome">Nome:</label>
        <input type="text" id="nome" name="nome" required>

        <label for="email">Email:</label>
        <input type="email" id="email" name="email">

        <label for="cnpj">CNPJ:</label>
        <input type="text" id="cnpj" name="cnpj">

        <label for="telefone">Telefone:</label>
        <input type="text" id="telefone" name="telefone">

        <label for="temTelefoneAlternativoCreate">Possui telefone alternativo?</label>
        <select id="temTelefoneAlternativoCreate" name="temTelefoneAlternativo">
          <option value="nao" selected>Não</option>
          <option value="sim">Sim</option>
        </select>

        <input type="text" id="telefoneAlternativoCreate" name="telefone_alternativo" maxlength="15" placeholder="Telefone alternativo" style="display: none; margin-top: 5px;">

        <label for="categoria">Categoria:</label>
        <input type="text" id="categoria" name="categoria" placeholder="Exemplo: Açougue, Padaria, etc.">

        <label for="pessoa_responsavel">Pessoa responsável:</label>
        <input type="text" id="pessoa_responsavel" name="pessoa_responsavel">

        <button type="submit">Salvar</button>
      </form>
    </div>
  </div>

  <a href="/dashboard" class="btn-voltar">⬅ Voltar</a>

  <script nonce="<%= cspNonce %>" src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script nonce="<%= cspNonce %>" src="https://unpkg.com/imask"></script>
  <script nonce="<%= cspNonce %>" src="/fornecedor/fornecedor.js"></script>

  <script nonce="<%= cspNonce %>">
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('searchInput');
      const table = document.querySelector('table tbody');
      const rows = Array.from(table.querySelectorAll('tr'));

      function filterTable() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        
        rows.forEach(row => {
          const cells = row.querySelectorAll('td');
          let found = false;
          
          for (let i = 0; i < cells.length - 1; i++) {
            const cellText = cells[i].textContent.toLowerCase();
            if (cellText.includes(searchTerm)) {
              found = true;
              break;
            }
          }
          
          if (found || searchTerm === '') {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });

        const visibleRows = rows.filter(row => row.style.display !== 'none');
        if (visibleRows.length === 0 && searchTerm !== '') {
          if (!document.querySelector('.no-results')) {
            const noResultsRow = document.createElement('tr');
            noResultsRow.className = 'no-results';
            noResultsRow.innerHTML = '<td colspan="8" style="text-align: center; padding: 40px; color: #6c757d; font-style: italic;">Nenhum fornecedor encontrado</td>';
            table.appendChild(noResultsRow);
          }
        } else {
          const noResultsRow = document.querySelector('.no-results');
          if (noResultsRow) {
            noResultsRow.remove();
          }
        }
      }

      let searchTimeout;
      searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(filterTable, 300);
      });

      searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          searchInput.value = '';
          filterTable();
          searchInput.blur();
        }
      });
    });
  </script>
</body>
</html>